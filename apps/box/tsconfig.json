{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "Node",
    "lib": ["es2019", "dom"],
    "allowJs": true,
    "outDir": "build/",
    "sourceMap": false,
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "baseUrl": "./src"
  },
  "include": [
    "src/",
  ],
  "exclude": [
    "node_modules"
  ]
}
