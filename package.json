{
  "name": "root",
  "private": true,
  "scripts": {
    "postinstall": "npm run bootstrap",
    "bootstrap": "lerna bootstrap && lerna link --force-local",
    "add": "lerna add --scope=@functionland/$npm_config_to $npm_config_package",
    "add-dev": "lerna add --scope=@functionland/$npm_config_to $npm_config_package --dev",
    "link": "lerna link --force-local",
    "list": "lerna list",
    "start": "lerna run start --parallel",
    "client": "lerna run start --scope=@functionland/graph --stream",
    "server": "lerna run start --scope=@functionland/server --stream",
    "signal": "lerna run start --scope=@functionland/signal --stream"
  },
  "devDependencies": {
    "lerna": "^4.0.0"
  }
}
