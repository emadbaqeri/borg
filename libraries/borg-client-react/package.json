{
  "name": "@functionland/borg-client-react",
  "version": "0.1.0",
  "description": "This package provide some utility to use borg client in react projects",
	"type": "module",
  "main": "dist/index.js",
	"types": "src/index.ts",
  "module": "dist/index.js",
  "source": "src/index.tsx",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "node scripts/build.js",
