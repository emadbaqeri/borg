{
  "compilerOptions": {
    "target": "ES5",
    "moduleResolution": "Node",
    "lib": [
      "ES2019",
      "DOM"
    ],
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "rootDir": "./",
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "scripts/**/*",
    "node_modules"
  ],
  "ts-node": {
    "transpileOnly": true
  }
}
