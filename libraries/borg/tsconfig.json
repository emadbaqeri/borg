{
  "compilerOptions": {
    "target": "es6",
    "module": "ES2020",
    "moduleResolution": "Node",
    "lib": ["ES2019","DOM"],
    "allowJs": true,
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules","dist", "scripts", "src/**/*.js"],
  "include": [
    "src/**/*.ts"
  ]
}
