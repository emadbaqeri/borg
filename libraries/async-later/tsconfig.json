{
  "compilerOptions": {
    "downlevelIteration": true,
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "Node",
    "lib": ["ES2019"],
    "allowJs": true,
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".", // This must be specified if "paths" is.
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
