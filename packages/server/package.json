{
  "name": "@functionland/server",
  "version": "0.0.1",
  "description": "",
  "main": "src/app.ts",
  "scripts": {
    "build": "rimraf ./build && tsc",
    "start": "nodemon --watch . --watch $(realpath node_modules/@functionland/protocols)",
    "serve": "npm run build && node build/app.js",
    "lint": "eslint . --ext .ts",
    "lint-format": "prettier --config .prettierrc \"src/**/*.ts\" --write",
    "lint-watch": "onchange \"src/**/*.ts\" -- prettier --write {{changed}}"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-format"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/functionland/graph.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/functionland/graph/issues"
  },
  "homepage": "https://github.com/functionland/graph#readme",
  "dependencies": {
    "@functionland/protocols": "^0.1.0",
    "it-pipe": "^1.1.0",
    "libp2p": "^0.31.5",
    "libp2p-bootstrap": "^0.12.2",
    "libp2p-mplex": "^0.10.2",
    "libp2p-noise": "^2.0.5",
    "libp2p-webrtc-direct": "^0.5.1",
    "libp2p-webrtc-star": "^0.22.2",
    "libp2p-websockets": "^0.15.6",
    "peer-id": "^0.14.6",
    "wrtc": "^0.4.7"
  },
  "devDependencies": {
    "@mapbox/node-pre-gyp": "^1.0.3",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^6.0.0",
    "nodemon": "^2.0.7",
    "onchange": "^7.1.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  }
}
