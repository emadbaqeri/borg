{
  "name": "@functionland/server",
  "version": "0.0.1",
  "description": "",
  "main": "dist/app.js",
  "scripts": {
    "start": "concurrently \"npm:watch\" \"npm:dev-server\"",
    "dev-server": "nodemon",
    "build": "node scripts/build.js",
    "serve": "npm run build && node dist/app.js",
    "watch": "concurrently \"npm:watch:*\"",
    "watch:build": "onchange -i  'src/**/*.ts' 'src/**/*.js' 'scripts/**/*.js' '../protocols/**' -- npm run build",
    "lint": "eslint . --ext .ts",
    "lint-format": "prettier --config .prettierrc \"src/**/*.ts\" --write",
    "watch:lint": "onchange 'src/**/*.ts' 'src/**/*.js' -- prettier --write {{changed}}"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-format"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/functionland/graph.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/functionland/graph/issues"
  },
  "homepage": "https://github.com/functionland/graph#readme",
  "dependencies": {
    "@functionland/protocols": "^0.1.0",
    "ipfs": "^0.55.1",
    "ipfs-repo": "^9.1.6",
    "it-pipe": "^1.1.0",
    "libp2p": "^0.31.5",
    "libp2p-bootstrap": "^0.12.2",
    "libp2p-mplex": "^0.10.2",
    "libp2p-noise": "^2.0.5",
    "libp2p-webrtc-direct": "^0.5.1",
    "libp2p-webrtc-star": "^0.22.2",
    "libp2p-websockets": "^0.15.6",
    "peer-id": "^0.14.6",
    "wrtc": "^0.4.7"
  },
  "devDependencies": {
    "@mapbox/node-pre-gyp": "^1.0.3",
    "concurrently": "^6.0.2",
    "esbuild": "^0.12.1",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^6.0.0",
    "nodemon": "^2.0.7",
    "onchange": "^7.1.0",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  }
}
